{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Bienvenue sur le site de la soupe</h1>
    <p>Pour vous connecter, nous avons besoin de votre nom, de votre prénom ainsi que de votre adresse mail</p>
    <label for="firstaname" class="sr-only">Prénom</label>
    <input type="text" name="firstname" id="firstname" class="form-control" placeholder="Prénom" required autofocus>
    <label for="name" class="sr-only">Nom</label>
    <input type="text" name="lastname" id="name" class="form-control" placeholder="Nom" required autofocus>
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
